<ul>
  <% @students.each do |student| %>
    <li><%= link_to student.name, student_path(student) %> | <%= link_to "Edit", edit_student_path(student) %> | <%= link_to "Delete", student_path(student),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

